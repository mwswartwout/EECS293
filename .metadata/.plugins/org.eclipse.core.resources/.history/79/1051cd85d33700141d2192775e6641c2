package hw2;

import java.util.Set;

public class Link 
{
	private Set<User> users;
	private Date date;
	private Validity status;
	
	public Link()
	{
		status = Validity.INVALID;
	}
	
	public boolean setUsers(Set<User> users)
	{
		if (isValid())
			return false;
		if (users.size() > 2)
			return false;
		else
		{
			this.users = users;
			return true;
		}
	}
	
	public boolean isValid()
	{
		if (status == Validity.VALID)
			return true;
		else
			return false;
	}
	
	public Set<User> getUsers() throws UninitializedObjectException
	{
		if (isValid())
			return users;
		else
			throw new UninitializedObjectException();
	}
	
	public boolean establish(Date date)
	{
		if (isValid())
			this.date = date;
		else 
	}
	
	public boolean tearDown(Date date)
	{
		
	}
	
	public boolean isActive(Date date)
	{
		
	}
	
	public Date firstEvent()
	{
		
	}
	
	public Date nextEvent()
	{
		
	}
	
	public String toString()
	{
		
	}
}
